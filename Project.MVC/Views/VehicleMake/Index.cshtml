@model Project.MVC.ViewModels.VehicleMakeVM
@{
    ViewData["Title"] = "Vehicle Makes";
}

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" 
                asp-route-sortOrder="@ViewData["NameSort"]"
                asp-route-search="@ViewData["CurrentFilter"]">
                    Name @(ViewData["NameSort"]?.ToString() == "desc" ? "▼" : "▲")
                </a>
            </th>
            <!-- Add other columns -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <!-- Other properties -->
            </tr>
        }
    </tbody>
</table>