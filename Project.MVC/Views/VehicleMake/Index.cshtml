@model Project.MVC.ViewModels.VehicleMakeIndexVM

@{
    ViewData["Title"] = "Vehicle Makes";
}

<div class="container">
    <h1>Vehicle Makes</h1>

    <!-- Filter Section -->
    <form method="get" class="mb-4">
        <div class="row g-3">
            <div class="col-md-6">
                <input type="text" name="search" value="@ViewContext.HttpContext.Request.Query["search"]" 
                    class="form-control" placeholder="Search makes...">
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a asp-action="Index" class="btn btn-secondary">Reset</a>
            </div>
        </div>
    </form>

    <!-- Make Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" 
                    asp-route-sortOrder="@ViewData["NameSort"]"
                    asp-route-search="@ViewContext.HttpContext.Request.Query["search"]">
                        Name @(ViewData["NameSort"]?.ToString() == "desc" ? "▼" : "▲")
                    </a>
                </th>
                <!-- Add other columns if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <!-- Add other properties -->
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    @await Html.PartialAsync("_Pagination", Model)
</div>
