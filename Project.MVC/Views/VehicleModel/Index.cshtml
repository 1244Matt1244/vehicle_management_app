@model Project.Service.Data.Helpers.PaginatedList<Project.MVC.ViewModels.VehicleModelVM>

<h2>Vehicle Models</h2>

<!-- Filter by Make -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <label for="makeId" class="mr-2">Filter by Make:</label>
    <select name="makeId" asp-items="ViewBag.Makes" class="form-control">
        <option value="">All Makes</option>
    </select>
    <button type="submit" class="btn btn-primary ml-2">Filter</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortBy="Name" asp-route-sortOrder="@(ViewBag.SortOrder == "asc" ? "desc" : "asc")">
                    Name
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortBy="MakeName" asp-route-sortOrder="@(ViewBag.SortOrder == "asc" ? "desc" : "asc")">
                    Make
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.MakeName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.HasPreviousPage)
{
    <a asp-action="Index" 
    asp-route-page="@(Model.PageIndex - 1)"
    asp-route-makeId="@ViewBag.MakeId"
    class="btn btn-primary">Previous</a>
}

@if (Model.HasNextPage)
{
    <a asp-action="Index" 
    asp-route-page="@(Model.PageIndex + 1)"
    asp-route-makeId="@ViewBag.MakeId"
    class="btn btn-primary">Next</a>
}