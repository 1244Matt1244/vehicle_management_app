@model Project.MVC.ViewModels.VehicleModelIndexVM

@{
    ViewData["Title"] = "Vehicle Models";
}

<h1>Vehicle Models</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Abrv</th>
            <th>Make</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PagedResults.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Abrv</td>
                <td>@item.MakeName</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @if (Model.PagedResults.HasPreviousPage)
    {
        <a href="@Url.Action("Index", new { pageIndex = Model.PagedResults.PageIndex - 1 })">&laquo;</a>
    }

    @for (int i = 1; i <= Model.PagedResults.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { pageIndex = i })" 
           class="@(i == Model.PagedResults.PageIndex ? "active" : "")">@i</a>
    }

    @if (Model.PagedResults.HasNextPage)
    {
        <a href="@Url.Action("Index", new { pageIndex = Model.PagedResults.PageIndex + 1 })">&raquo;</a>
    }
</div>
